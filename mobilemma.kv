#:kivy 1.4.0
#:import MMALexer mmalexer.MMALexer
#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter

<MobileMMAUI>:
    # ids as properties so that they can be used in python code
    key_list: key_list
    groove_tree: groove_tree
    tune_list: tune_list

    BoxLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos

        Accordion:
            AccordionItem:
                title: "Key"

                BoxLayout:
                    orientation: "vertical"

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: 40

                        Button:
                            text: "All"
                            on_press:
                                key_list.adapter.select_list(key_list.adapter.data, extend=False)

                        Button:
                            text: "None"
                            on_press:
                                key_list.adapter.select_list([], extend=False)

                    ListView:
                        id: key_list
                        # b musical symbol : â™­ = \u266D adapter:
                        adapter:
                            la.ListAdapter(
                            data=[],
                            selection_mode='multiple',
                            cls=lv.ListItemButton)

            AccordionItem:
                title: "Groove"

                BoxLayout:
                    orientation: "vertical"

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: 40

                        GrooveSelectAllButton:
                            text: "All"

                        GrooveSelectNoneButton:
                            text: "None"

                    ScrollView:
                        do_scroll_x: False
                        scroll_timeout: 250
                        scroll_distance: 5

                        TreeView:
                            id: groove_tree
                            size_hint_y: None
                            height: self.minimum_height
                            hide_root: True
                            indent_level: 32
                            indent_start: 32


            AccordionItem:
                title: "Additional filters"

                BoxLayout:
                    orientation: "vertical"

            AccordionItem:
                title: "Options"

                BoxLayout:
                    orientation: "vertical"

        ListView:
            id: tune_list

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 40

            Button:
                text: "Play"
                on_release: root.play_pause()

            Button:
                text: "Stop"
                on_release: root.stop()

            Button:
                text: "Edit"

            Button:
                text: "Configuration"
                on_release:

<TreeViewToggleButton>:
    padding: 14, 10
    height: self.texture_size[1] + self.padding_y * 2
    text_size: self.width - self.padding_x * 2, None
    no_selection: True
    state: 'down'
